<%= form_for [@restaurant, @review] do |form| %>
    <div class="form-group">
        <label for="review-rating">Rating</label>
        <%= form.text_field :rating, id: "review-rating", class: "form-control", autocomplete: "off" %>
        <small class="form-text text-muted">How would you rate this restaurant (from 1 - 5)?</small>
    </div>
    <div class="form-group">
        <label for="review-content">Review Content</label>
        <small class="form-text text-muted">Write the body of the review here</small>
        <%= form.text_area :content, id: "review-content", class: "form-control", rows: "3" %>
    </div>
    <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-danger" %>
    <%= form.submit "Confirm", class: "btn btn-success" %>
<% end %>
